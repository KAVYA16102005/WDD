    <?php
    if($_POST){
        $email = $_POST['email'];

        // Email validation with regex
        if (preg_match("/^[a-zA-Z0-9._%+-]+@[a-zA-Z0-9.-]+\.[a-z]{2,}$/", $email)) {
            echo "<p>Registered Successfully!</p>";
        } else {
            echo "<p style='color:#d32f2f;'>Invalid email! Use format like: example@mail.com</p>";
