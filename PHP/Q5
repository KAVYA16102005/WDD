<!DOCTYPE html>
<html>
<head>
    <title>Purchase Calculator</title>
</head>
<body>
    <h2>Enter Price and Quantity for 3 Items</h2>
    <form method="post">
        <h3>Item 1</h3>
        Price: <input type="number" name="price1" step="0.01" required><br>
        Quantity: <input type="number" name="qty1" required><br>

        <h3>Item 2</h3>
        Price: <input type="number" name="price2" step="0.01" required><br>
        Quantity: <input type="number" name="qty2" required><br>

        <h3>Item 3</h3>
        Price: <input type="number" name="price3" step="0.01" required><br>
        Quantity: <input type="number" name="qty3" required><br><br>

        <input type="submit" name="submit" value="Calculate">
    </form>

    <?php
    if (isset($_POST['submit'])) {
        // Get form values
        $price1 = $_POST['price1'];
        $qty1 = $_POST['qty1'];
        $price2 = $_POST['price2'];
        $qty2 = $_POST['qty2'];
        $price3 = $_POST['price3'];
        $qty3 = $_POST['qty3'];

        // Calculate subtotal
        $subtotal = ($price1 * $qty1) + ($price2 * $qty2) + ($price3 * $qty3);

        // Calculate tax (10%)
        $tax = $subtotal * 0.10;

        // Total cost
        $total = $subtotal + $tax;

        // Display results
        echo "<h3>Results:</h3>";
        echo "Subtotal: ₹" . number_format($subtotal, 2) . "<br>";
        echo "Tax (10%): ₹" . number_format($tax, 2) . "<br>";
        echo "Total Cost: ₹" . number_format($total, 2);
    }
    ?>
</body>
</html>
